#!/usr/bin/env node

var program = require('commander');
var main = require('../lib/main').main;

program.
    version('0.0.1').
    option('-p, --port <port>', 'specify the port [80]', Number, 80).
    option('--disable-input', 'disable stdin').
    option('--disable-output', 'disable stdout').
    parse(process.argv);

main(program.port, {disableInput: program.disableInput,
                    disableOutput: program.disableOutput});
